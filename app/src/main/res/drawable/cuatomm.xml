<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">


        <shape android:shape="oval">
            <solid android:color="#ffff"/>
            <corners android:radius="10dp"/>

            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp"/>


        </shape>
    </item>
</layer-list>